{
  "name": "conv-changelog",
  "version": "1.0.0",
  "description": "A conventional commits changelog generator",
  "keywords": [
    "conventional",
    "commits",
    "changelog",
    "generator"
  ],
  "homepage": "https://github.com/commenthol/conv-changelog",
  "repository": {
    "type": "git",
    "url": "https://github.com/commenthol/conv-changelog.git"
  },
  "license": "MIT",
  "author": "commenthol <commenthol@gmail.com>",
  "type": "module",
  "main": "src/index.js",
  "types": "types",
  "bin": {
    "conv-changelog": "bin/conv-changelog.js"
  },
  "directories": {
    "test": "test"
  },
  "files": [
    "bin",
    "src",
    "types"
  ],
  "scripts": {
    "all": "npm-run-all lint coverage types",
    "changelog": "./bin/conv-changelog.js -t groups -o",
    "coverage": "c8 npm t",
    "lint": "eslint --ext js .",
    "test": "mocha",
    "types": "rimraf types; tsc"
  },
  "mocha": {
    "color": true,
    "recursive": true
  },
  "dependencies": {
    "debug": "^4.3.4",
    "ejs": "^3.1.9",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@types/node": "^20.5.1",
    "c8": "^8.0.1",
    "eslint": "^8.47.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1",
    "sinon": "^15.2.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18"
  }
}
