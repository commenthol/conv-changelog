{
  "name": "conv-changelog",
  "version": "0.0.1-0",
  "description": "A conventional changelog generator",
  "keywords": [
    "changelog",
    "generator"
  ],
  "license": "MIT",
  "author": "commenthol <commenthol@gmail.com>",
  "type": "module",
  "main": "src/index.js",
  "types": "types",
  "bin": {
    "conv-changelog": "./bin/conv-changelog.js"
  },
  "files": [
    "bin",
    "src",
    "types"
  ],
  "scripts": {
    "all": "npm-run-all lint coverage types",
    "changelog": "conventional-changelog -p eslint -i CHANGELOG.md -s -r1",
    "coverage": "c8 npm t",
    "lint": "eslint --ext js .",
    "test": "mocha",
    "types": "rimraf types; tsc"
  },
  "mocha": {
    "color": true,
    "recursive": true
  },
  "dependencies": {
    "debug": "^4.3.4",
    "ejs": "^3.1.8",
    "semver": "^7.3.8"
  },
  "devDependencies": {
    "@types/node": "^18.14.6",
    "c8": "^7.13.0",
    "eslint": "^8.35.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "mocha": "^10.2.0",
    "sinon": "^15.0.1",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=18"
  }
}
